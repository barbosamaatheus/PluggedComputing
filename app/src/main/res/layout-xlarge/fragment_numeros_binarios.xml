<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fundo"
    android:orientation="vertical"
    tools:context=".fragments.NumerosBinariosFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/cardshape"
            android:elevation="5dp"
            android:orientation="vertical">


            <TextView
                style="@style/TextViewStyleLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/texto_nb_01" />

            <TextView
                android:id="@+id/showNumber_nb"
                style="@style/TextViewStyleLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="As cartas abaixo estão representando o número 31" />

            <TextView
                style="@style/TextViewStyleLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/texto_nb_02" />

            <TextView
                style="@style/TextViewStyleLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Presione o cartão para vira-lo"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/carta16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@mipmap/carta16" />

                <ImageButton
                    android:id="@+id/carta8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@mipmap/carta8" />

                <ImageButton
                    android:id="@+id/carta4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@mipmap/carta4" />

                <ImageButton
                    android:id="@+id/carta2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@mipmap/carta2" />

                <ImageButton
                    android:id="@+id/carta1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@mipmap/carta1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/num16"
                    style="@style/TextViewStyleLarge"
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:text="1"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/num8"
                    style="@style/TextViewStyleLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:text="1"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/num4"
                    style="@style/TextViewStyleLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:text="1"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/num2"
                    style="@style/TextViewStyleLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:text="1"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/num1"
                    style="@style/TextViewStyleLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:text="1"
                    android:textAlignment="center" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/dicas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cardshape"
                android:src="@drawable/ic_help_outline_black_24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/cardshape"
            android:elevation="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/perg1"
                style="@style/TextViewStyleLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Qual é o maior número que você pode formar com esse cartões? Qual é o menor ?"
                android:textAlignment="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:textSize="20sp"
                    android:id="@+id/valorMaiorNB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/redioshape"
                    android:fontFamily="@font/bungee"
                    android:hint="Maior..."
                    android:inputType="number"
                    android:maxLength="2"
                    android:theme="@style/EditTextStyleLarge" />

                <EditText
                    android:textSize="20sp"
                    android:id="@+id/valorMenorNB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/redioshape"
                    android:fontFamily="@font/bungee"
                    android:hint="Menor..."
                    android:inputType="number"
                    android:maxLength="2"
                    android:theme="@style/EditTextStyleLarge" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/cardshape"
            android:elevation="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/perg2"
                style="@style/TextViewStyleLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. A sequencia em binário 10011 corresponde a que numero decimal?"
                android:textAlignment="center" />

            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/myRadioGroup2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/certo2"
                    style="@style/RadioButtonStyleLarge"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="19" />

                <RadioButton
                    android:id="@+id/errado22"
                    style="@style/RadioButtonStyleLarge"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="13" />

                <RadioButton
                    android:id="@+id/errado21"
                    style="@style/RadioButtonStyleLarge"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="5" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/cardshape"
            android:elevation="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/perg3"
                style="@style/TextViewStyleLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. Os numeros 3 e 12 correspondem respectivamente à: "
                android:textAlignment="center" />


            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/myRadioGroup3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/errado31"
                    style="@style/RadioButtonStyleLarge"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="01101 e 00011" />

                <RadioButton
                    android:id="@+id/errado32"
                    style="@style/RadioButtonStyleLarge"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="10011 e 01101" />

                <RadioButton
                    android:id="@+id/certo3"
                    style="@style/RadioButtonStyleLarge"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="00011 e 01100" />
            </RadioGroup>
        </LinearLayout>

        <Button
            android:id="@+id/finalizar"
            style="@style/ButtonStyleLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Finalizar" />

    </LinearLayout>
</ScrollView>
