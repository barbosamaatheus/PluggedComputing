<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fundo"
    android:orientation="vertical"
    tools:context="com.tcc.projeto.appcomputacaoplugada.fragments.IntroducaoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/cardshape"
            android:elevation="5dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:justificationMode="inter_word"
                android:text="@string/string_intro_02"
                android:textColor="@color/textColorPrimary"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Presione o cartão para vira-lo"
                android:textColor="@color/textColorPrimary"
                android:textSize="10dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/carta16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@mipmap/fundocarta" />

                <ImageButton
                    android:id="@+id/carta8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@mipmap/carta8" />

                <ImageButton
                    android:id="@+id/carta4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@mipmap/fundocarta" />

                <ImageButton
                    android:id="@+id/carta2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    android:background="@mipmap/fundocarta" />

                <ImageButton
                    android:id="@+id/carta1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@mipmap/carta1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/num16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/textColorPrimary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/num8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/textColorPrimary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/num4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/textColorPrimary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/num2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/textColorPrimary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/num1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    android:textAlignment="center"
                    android:text="1"
                    android:textColor="@color/textColorPrimary"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/cardshape"
            android:orientation="vertical">

            <TextView
                android:id="@+id/perg1_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="1. O que você percebeu sobre o número de pontos nos cartões?"
                android:textAlignment="center"
                android:textColor="@color/textColorPrimary" />

            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/myRadioGroup1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/certo1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/redioshape"
                    android:fontFamily="@font/bungee"
                    android:gravity="center"
                    android:text="É duas vezes
maior que o proximo"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/errado11"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/redioshape"
                    android:fontFamily="@font/bungee"
                    android:gravity="center"
                    android:text="São valores aleatórios"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/errado12"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/redioshape"
                    android:fontFamily="@font/bungee"
                    android:gravity="center"
                    android:text="É a soma do proxim com o anterior"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="12sp" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/cardshape"
            android:elevation="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/perg2_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="2. Quantos pontos teria o próximo cartão colocado à esquerda?"
                android:textAlignment="center"
                android:textColor="@color/textColorPrimary" />

            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/myRadioGroup2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/errado21"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/redioshape"
                    android:fontFamily="@font/bungee"
                    android:gravity="center"
                    android:text="24"
                    android:textColor="@color/textColorPrimary" />

                <RadioButton
                    android:id="@+id/errado22"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/redioshape"
                    android:fontFamily="@font/bungee"
                    android:gravity="center"
                    android:text="20"
                    android:textColor="@color/textColorPrimary" />

                <RadioButton
                    android:id="@+id/certo2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/redioshape"
                    android:fontFamily="@font/bungee"
                    android:gravity="center"
                    android:text="32"
                    android:textColor="@color/textColorPrimary" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/cardshape"
            android:elevation="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/perg3_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="3. Como seria o número 17 em binário ?"
                android:textAlignment="center"
                android:textColor="@color/textColorPrimary" />


            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/myRadioGroup3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/errado31"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/redioshape"
                    android:fontFamily="@font/bungee"
                    android:gravity="center"
                    android:text="01101"
                    android:textColor="@color/textColorPrimary" />

                <RadioButton
                    android:id="@+id/certo3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/redioshape"
                    android:fontFamily="@font/bungee"
                    android:gravity="center"
                    android:text="10001"
                    android:textColor="@color/textColorPrimary" />

                <RadioButton
                    android:id="@+id/errado32"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/redioshape"
                    android:fontFamily="@font/bungee"
                    android:gravity="center"
                    android:text="10011"
                    android:textColor="@color/textColorPrimary" />
            </RadioGroup>
        </LinearLayout>

        <Button
            android:id="@+id/btn_finalizar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/buttonshape"
            android:fontFamily="@font/bungee"
            android:text="Finalizar"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </LinearLayout>


</ScrollView>

